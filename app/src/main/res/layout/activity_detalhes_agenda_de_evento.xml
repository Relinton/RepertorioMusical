<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".DetalhesAgendaDeEventoActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Descrição:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:longClickable="true"/>
                    <TextView
                        android:text="Endereço:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:longClickable="true"/>
                    <TextView
                        android:text="Data: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:longClickable="true"/>
                    <TextView
                        android:text="Músicas: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:longClickable="true"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_detalhes_descricao"
                        android:text="descrição do evento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:longClickable="true"/>
                    <TextView
                        android:id="@+id/txt_detalhes_endereco"
                        android:text="endereço do evento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:longClickable="true"/>
                    <TextView
                        android:id="@+id/txt_detalhes_data"
                        android:text="data do evento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:longClickable="true"/>
                    <TextView
                        android:id="@+id/txt_detalhes_musicas"
                        android:text="músicas a serem tocadas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:longClickable="true"/>

                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>