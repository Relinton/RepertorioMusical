<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="3"
    android:useDefaultMargins="true"
    android:orientation="horizontal"
    android:clickable="true"
    android:background="#004aad"
    tools:context=".MenuInterativoActivity">

    <ImageButton
        android:id="@+id/category1_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="2dp"
        android:src="@drawable/repertorio_musical"
        android:scaleType="fitCenter"
        android:onClick="RepertorioMusical"/>

    <ImageButton
        android:id="@+id/category2_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="2dp"
        android:src="@drawable/agenda_de_eventos"
        android:scaleType="fitCenter"
        android:onClick="AgendaDeEventos"/>

    <ImageButton
        android:id="@+id/category3_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="2dp"
        android:src="@drawable/ensaios"
        android:onClick="Ensaios"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:id="@+id/category4_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="2dp"
        android:src="@drawable/notificacoes"
        android:onClick="Notificacoes"
        android:scaleType="fitCenter"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_margin="2dp" />

</GridLayout>